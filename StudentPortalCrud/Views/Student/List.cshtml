@{
}
@model List<StudentPortalCrud.Models.Entities.Student>
<h1>Stundets List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <form asp-controller="Student" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@student.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
                 
            </tr>
        }
    </tbody>

</table>
